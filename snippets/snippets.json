    "fluig-input-file-jq": {
        "scope": "javascript, html",
        "prefix": "fluig-input-file-jq",
        "body": [
            "$('#anexo').click(function () {",
            "    $('#anexPag').click();",
            "    $('#anexPag').change(function () {",
            "        'var anexo = $('#anexPag').val();'",
            "         var divindo = anexo.split('\\', 3);",
            "        $('#resultAnexo').val(divindo[2])",
            "    });",
            "});"
        ],
        "description": "jquery calendar fluig"
    },
